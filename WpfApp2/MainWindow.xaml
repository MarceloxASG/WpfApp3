<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox Name="txtInvoiceNumber" Width="200" Margin="10"/>
        <Button Name="btnInvoice" Content="Mostrar Invoices" Click="btnInvoice_Click" Width="150" Margin="10"/>
        <Button Name="btnFilterInvoice" Content="Filtrar" Click="btnFilterInvoice_Click" Width="150" Margin="10"/>
        <Button Name="btnInsertInvoice" Content="Insertar Factura" Click="btnInsertInvoice_Click" Width="150" Margin="10"/>
        <Button Name="btnDeleteInvoice" Content="Eliminar Factura" Click="btnDeleteInvoice_Click" Width="150" Margin="10"/>
        <DataGrid Name="dgInvoices" AutoGenerateColumns="True" Margin="10" />
    </StackPanel>

</Window>
